        <style>
            .courses-area.section-gap {
                background-color: #37b3c5;
            }
            
            .courses-area.section-gap h1 {
                margin: 5px;
            }
            
            header {
                background: rgb(0, 0, 0, 1) !important;
                transition: all 0.5;
            }
            
            .menu-active>a {
                color: #39cfca !important;
            }
            
            .nav.flex-column li.active {
                background: #2b3035;
            }
            
            .card-body {
                margin: 20px 0px;
                background: #38c5c8;
                border-radius: 15px;
                color: white;
            }
            
            .modal-lg {
                max-width: 80% !important;
            }
            
            .main-content>h3 {
                text-align: center;
            }
            
            * {
                box-sizing: border-box
            }
            /* Style the tab */
            
            .tab {
                float: left;
                border: 1px solid #ccc;
                background-color: #f1f1f1;
                width: 15%;
            }
            /* Style the buttons that are used to open the tab content */
            
            .tab button {
                display: block;
                background-color: inherit;
                color: black;
                padding: 22px 16px;
                width: 100%;
                border: none;
                outline: none;
                text-align: left;
                cursor: pointer;
                transition: 0.3s;
            }
            /* Change background color of buttons on hover */
            
            .tab button:hover {
                background-color: #ddd;
            }
            /* Create an active/current "tab button" class */
            
            .tab button.active {
                background-color: #ccc;
            }
            /* Style the tab content */
            
            .tabcontent {
                float: left;
                padding: 15px;
                border: 1px solid #ccc;
                width: 85%;
                border-left: none;
            }
            
            .tab_document_view_doc {
                padding: 20px;
            }
            
            .tab_document_view_doc p {
                text-align: justify;
            }
            
            .tab_document_view_doc h3,
            h4 {
                text-align: center;
                margin: 7px;
            }
            
            .tab_document_view_doc h3 {
                font-size: 25px;
            }
            
            .tab_document_view_doc h4 {
                font-size: 18px;
                font-weight: normal;
            }
        </style>
</head>

